{
    "version": "1.0",
    "containers": [
        {            
            "allow_elevated": true,
            "containerImage": "<registry-name>/encrypted-filesystem:1.0",
            "environmentVariables": [
                {
                    "name": "EncfsSideCarArgs",
                    "value": ".+",
                    "strategy": "re2"
                }
            ],
            "command": [ 
                "/encfs.sh"                
            ],
            "mounts": [
                {
                    "mountType": "emptyDir",
                    "mountPath": "/mnt/remote",
                    "readonly": false
                }
            ]
        },        
        {            
            "containerImage": "docker.io/alpine:3.17.1",
            "environmentVariables": [],
            "command": [     
                "/bin/sh",
                "-c",    
                "while true; do /usr/bin/top -b -n 1 | /usr/bin/head -n 20; sleep 1; done"
             ],
            "mounts": [
                {
                    "mountType": "emptyDir",
                    "mountPath": "/mnt/remote",
                    "readonly": false
                }
            ],
            "wait_mount_points": [
                "/mnt/remote/share"                
            ]
        }
    ]
}
