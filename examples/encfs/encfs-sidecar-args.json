{
   "azure_filesystems": [
      {
         "mount_point": "/mnt/remote/share",
         "azure_url": "<azure-blob-storage-url>",
         "azure_url_private": true,
         "read_write": true,
         "key": {
            "kid": "<key-vault-akv-key-identifier>",
            "kty": "<key-type-of-key-imported-to-akv>",
            "authority": {
               "endpoint": "<authority-of-key-imported-to-akv>"
            },
            "akv": {
               "endpoint": "key-vault-akv-endpoint"
            }
         },
         "key_derivation": {
            "salt": "<salt-for-key-derivation-valid-only-for-RSA-HSM-keys>",
            "label": "<label-for-derived-key-valid-only-for-RSA-HSM-keys>"
         }
      }
   ]
}